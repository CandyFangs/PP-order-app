	<%= flash[:notice] if flash[:notice] %>
	<table class="table" border="1">
		<tr>
			<th>Typ</th>
			<th>Model</th>
			<th>Opis</th>
			<th>Cena</th>
			<th>Zdjęcie</th>
			<th>Elementy</th>
			<th>Edycja</th>
			<th>Usuwanie</th>
		</tr>
		<% @products.each do |product| %>
		<tr>
			<td><%= product.kind %></td>
			<td><%= product.model %></td>
			<td><%= product.description %></td>
			<td><%= product.price %></td>
			<td><%= image_tag product.picture %></td>
			<td><%= link_to 'Pokaż', product_elements_path(product) %></td>
			<td><%= link_to 'Edytuj', edit_product_path(product) %></td>
			<td><%= link_to 'Usuń', product_path(product), method: :delete, data: { confirm: "Na pewno usunąć?" } %></td>
		</tr>
		<% end %>
	</table>
	</br>
	<%= link_to 'Nowy produkt', new_product_path%>
	<br />
	<%= link_to "Cofnij", root_path %>


