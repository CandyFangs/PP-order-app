<%= flash[:notice] if flash[:notice] %>
<br />
<table class="table" border="1">
<h3>Przypisane elementy</h3>
<h4><%= @product.model %></h4>
	<tr>
		<th>Nazwa</th>
		<th>Materiał</th>
		<th>Usuń</th>
	</tr>
	<% @elements.each do |element| %>
	<tr>
		<td><%= element.name%></td>
		<td><%= element.material.brand %></td>
		<td><%= link_to 'Usuń', product_element_path(@product, element), method: :delete, data: { confirm: "Na pewno usunąć?" } %></td>
	</tr>
	<% end %>
</table>
<%= link_to 'Nowy element', new_product_element_path %>
</br>
<%= link_to "Cofnij", products_path %>